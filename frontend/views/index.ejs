<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Block Explorer</title>
    <link rel="stylesheet" href="/css/style.css">
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const ws = new WebSocket('ws://localhost:3000');

            ws.onmessage = function (event) {
                const data = JSON.parse(event.data);
                console.log('Received update:', data);

                // Handle updates based on type
                if (data.type === 'transaction') {
                    // Update transaction UI
                    console.log('New transaction:', data.data);
                } else if (data.type === 'block') {
                    // Update block UI
                    console.log('New block:', data.data);
                }

                // Example: Refresh the page to reflect updates
                // window.location.reload();
            };

            ws.onopen = function () {
                console.log('WebSocket connection established');
            };

            ws.onclose = function () {
                console.log('WebSocket connection closed');
            };

            ws.onerror = function (error) {
                console.error('WebSocket error:', error);
            };
        });
    </script>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/api-docs">API Docs</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="https://github.com/mrnazu/malac-blockchain" target="_blank">GitHub</a></li>
                <li>Developer: Samuel (NAZU)</li>
            </ul>
        </nav>
    </header>
    <main>
        <h1>Latest Blocks</h1>
        <table>
            <thead>
                <tr>
                    <th>Block Number</th>
                    <th>Hash</th>
                    <th>Timestamp</th>
                    <th>Transactions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% latestBlocks.forEach(block => { %>
                    <tr>
                        <td><%= block.index %></td>
                        <td><%= block.hash %></td>
                        <td><%= new Date(block.timestamp).toLocaleString() %></td>
                        <td><%= block.transactions.length %></td>
                        <td><a href="/block/<%= block.index %>">View Details</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>